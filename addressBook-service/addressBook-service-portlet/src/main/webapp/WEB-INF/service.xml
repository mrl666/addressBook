<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="com.book.address">
	<namespace>ADDRESSBOOK</namespace>
	<entity uuid="true" local-service="true" remote-service="true"
		name="AddressBook" table="addressbook_data">

		<!-- PK fields -->

		<column name="addressBookId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column type="String" name="name"/>
		<column type="String" name="email"/>
		<column name="age" type="int" />
		<column type="String" name="message"/>

		<!-- Order -->

		<order by="asc">
			<order-column name="addressBookId" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portlet.asset"
			entity="AssetEntry" />
		<reference package-path="com.liferay.portlet.asset"
			entity="AssetTag" />
	</entity>
</service-builder>